    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_accueil">

    <fragment
        android:id="@+id/navigation_accueil"
        android:name="com.elgoumri.xtrend.ui.accueil.AccueilFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_accueil" />

    <fragment
        android:id="@+id/navigation_catégorie"
        android:name="com.elgoumri.xtrend.ui.catégorie.CatégorieFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_categorie" />

    <fragment
        android:id="@+id/navigation_pannier"
        android:name="com.elgoumri.xtrend.ui.panier.PanierFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_panier" />

    <fragment
        android:id="@+id/navigation_profil"
        android:name="com.elgoumri.xtrend.ui.profil.ProfilFragment"
        android:label="@string/app_name"
